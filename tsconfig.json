{
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["ESNext"],
    "allowJs": true,
    "module": "Node16",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "moduleResolution": "node16",
    "types": ["@rstest/core/globals"],
    "paths": {
      "@/*": ["./src/*"]
    },
    "isolatedModules": true
  },
  "include": ["src"],
  "exclude": ["**/node_modules"]
}
